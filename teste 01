frase = str(input('digite uma frase:')).upper().strip()
print('quantas vezes aparece a letra "A"? {}'.format(frase.count('A')))
print('em que posição a letra "A" aparece pela primeira vez? {}'.format(frase.find('A')+1))
print('em que posição a letra "A" aparece pela última vez? {}'.format(frase.rfind('A')+1))
